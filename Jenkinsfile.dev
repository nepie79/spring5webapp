pipeline{
    agent any

    environment {
        ansible_pw = credentials('ansible-vault-pw-file')
    }

    options {
        skipDefaultCheckout(true)
    }

    parameters {
        booleanParam(name: "RunTests", defaultValue: true, description: "Sollen Tests ausgef√ºhrt werden?")
    }

    stages{
        stage('Checkout'){
            steps{
                echo "Checkout"
                checkout scm
            }
        }
        stage('Build'){
            steps{
                echo "Building ..."
                dir('ansible') {
                    sh 'ansible-playbook playbook.yml -i inventory/ -vvvv --vault-password-file $ansible_pw2'
                }
            }
            
        }
        stage('Test'){
            when { expression { return params.RunTests } }
            steps{
                echo "Testing: ${params.RunTests}"
            }
            
        }
    }
}
